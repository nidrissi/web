{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Edge",
      "request": "launch",
      "type": "pwa-msedge",
      "url": "http://localhost:8000",
      "webRoot": "${workspaceFolder}",
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "curriculum/split.js",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/curriculum/split.js",
      "cwd": "${workspaceFolder}/curriculum"
    },
    {
      "name": "Gatsby develop",
      "type": "pwa-node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/.bin/gatsby",
      "args": [
        "develop"
      ],
      "runtimeArgs": [
        "--nolazy"
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "Gatsby build",
      "type": "pwa-node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/.bin/gatsby",
      "args": [
        "build"
      ],
      "runtimeArgs": [
        "--nolazy"
      ],
      "console": "integratedTerminal"
    }
  ]
}
