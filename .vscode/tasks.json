{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "hugo: serve",
      "type": "process",
      "command": "hugo",
      "args": ["serve", "--buildDrafts", "--buildFuture"],
      "isBackground": true,
      "problemMatcher": {
        "severity": "error",
        "fileLocation": "absolute",
        "pattern": {
          "regexp": "^ERROR .+ \"(.+):(\\d+):(\\d+)\": (.+)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "message": 4
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Change detected, rebuilding site.",
          "endsPattern": "^Total in"
        }
      }
    },
    {
      "label": "hugo: build",
      "type": "process",
      "command": "hugo",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "cv: build",
      "type": "process",
      "command": "make",
      "group": "build",
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/curriculum"
      }
    },
    {
      "label": "cv: copy",
      "type": "process",
      "command": "make",
      "args": ["copy"],
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/curriculum"
      }
    },
    {
      "label": "cv: clean",
      "type": "process",
      "command": "make",
      "args": ["clean"],
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/curriculum"
      }
    }
  ]
}
