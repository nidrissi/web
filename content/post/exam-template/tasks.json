{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Pandoc CC",
      "type": "process",
      "group": {
        "kind": "build"
      },
      "command": "pandoc",
      "args": [
        "--verbose",
        "--pdf-engine",
        "lualatex",
        "--template",
        "exam-template.tex",
        "--lua-filter",
        "exam-filter.lua",
        "${file}",
        "--output",
        "${relativeFileDirname}/${fileBasenameNoExtension}.pdf"
      ],
      "problemMatcher": []
    }
  ]
}
